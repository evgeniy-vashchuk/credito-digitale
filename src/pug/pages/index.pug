extends ../templates/main-template.pug

block vars
	- var pageTitle = "Home - Credito Digitale";
	- var activeMenuLink = "Home";

block content
	// SECTION WELCOME
	section.section-welcome.section
		.section-welcome__wrap
			.container
				.section-welcome__main-content
					.row
						.col-md-9.order-2.order-md-1
							h1.h2.section-welcome__title Credito Digitale: soluzioni IT e risparmio fiscale
							a(href="chi-siamo.html" class="link-with-arrow text-white") Scopri di più
						.col-md-3.order-1.order-md-2
							.section-welcome__figure-wrap
								.section-welcome__figure.union-figure
									.union-figure__square(data-aos="fade-down-right" data-aos-easing="ease-in-quad")
									.union-figure__square(data-aos="fade-down" data-aos-easing="ease-in-quad" data-aos-delay="50")
									.union-figure__square(data-aos="fade-down-left" data-aos-easing="ease-in-quad" data-aos-delay="100")
									.union-figure__square(data-aos="fade-right" data-aos-easing="ease-in-quad" data-aos-delay="150")
									.union-figure__square(data-aos="fade-left" data-aos-easing="ease-in-quad" data-aos-delay="200")
									.union-figure__square(data-aos="fade-up-left" data-aos-easing="ease-in-quad" data-aos-delay="250")
				|
				|
				.section-welcome__img
					img(src="img/section-welcome-img.jpg" alt="Image" class="of-cover")
	// SECTION WELCOME END
	|
	|
	// SECTION WHO WE ARE
	section.section-who-we-are.section
		.container
			.row
				.col-sm-8.offset-sm-4
					h2.section-who-we-are__title Chi siamo
				.col-sm-3.d-none.d-sm-flex
					.section-who-we-are__side-color-block-for-text
						.section-who-we-are__side-color-block-for-text-inner(data-aos="fade-right")
				.col-sm-8.offset-sm-1
					.row.remove-last-child-margin
						.col-lg-6
							p.mb-lg-0 Credito Digitale nasce dalla collaborazione di due realtà imprenditoriali, Mokka Studios S.r.l. e [B]IoHT S.r.l., consapevoli di quanto la digitalizzazione 4.0 sia fondamentale per permettere alle aziende italiane di rimanere o diventare competitive sul mercato.
						.col-lg-6
							p.mb-lg-0 Credito Digitale è la prima realtà italiana a unire la ricerca in transizione digitale e la consulenza fiscale, occupandosi dello sviluppo tecnologico di una soluzione software innovativa e dell’efficientamento fiscale a 360°.
				.col-sm-8.col-lg-4.offset-sm-4.offset-lg-8
					.section-who-we-are__link-wrap
						a(href="chi-siamo.html" class="link-with-arrow text-secondary") Scopri di più
	// SECTION WHO WE ARE END
	|
	|
	// SECTION WHAT DO WE DO
	section.section-what-do-we-do.section
		.container
			h2.mb-8.section-what-do-we-do__title Cosa facciamo
			|
			|
			.row
				.col-sm-8
					.section-what-do-we-do__text.text-block
						p La procedura è molto semplice e trasparente e se ne occupa interamente il nostro team di esperti.
					.row.remove-last-child-margin
						.col-lg-6
							p.mb-lg-0 Inizialmente i nostri commercialisti e revisori dei conti analizzano la situazione economico-finanziaria della vostra società per comprendere se i parametri dell'azienda risultano adeguati per poter accedere alle agevolazioni fiscali per investimenti in innovazioni digitali 4.0. In caso di valutazione positiva, viene esposto al cliente il prospetto di calcolo relativo all’ammontare del credito d’imposta (Risparmio fiscale) che si può generare.
						.col-lg-6
							p.mb-lg-0 A questo punto, il nostro team di Ideazione & Sviluppo andrà a proporre, in base alle tue richieste ed esigenze, la realizzazione di un software che porti valore aggiunto alla tua azienda. Ovviamente ci occupiamo noi della sua realizzazione e implementazione. Il cliente, successivamente al completamento del progetto di ricerca, potrà usufruire nei 3 anni successivi, del credito d’imposta che i nostri esperti revisori avranno certificato. Permettiamo, quindi, di generare un “risparmio fiscale" che renderà estremamente vantaggiosa la transizione digitale della tua azienda.
				.col-3.offset-1.d-none.d-sm-flex
					.section-what-do-we-do__side-color-block-for-text
						.section-what-do-we-do__side-color-block-for-text-inner(data-aos="fade-left")
				.col-xxl-8
					.text-end.text-sm-start.text-xxl-end.section-what-do-we-do__link-wrap
						a(href="preventivatore.html" class="link-with-arrow text-secondary") Verifica quanto puoi risparmiare
	// SECTION WHAT DO WE DO END
	|
	|
	// SECTION BENEFITS
	section.section-benefits.section
		.section-benefits__wrap
			.container
				.section-benefits__wrap-inner
					.section-benefits__decoration-block.d-none.d-sm-block(data-aos="slide-down")
					|
					|
					.row
						.col-sm-8.col-md-9.col-xxl-8.offset-sm-4.offset-md-3.offset-xxl-4
							h2.section-benefits__title I vantaggi per la tua azienda
							|
							|
							.section-benefits__list
								.section-benefits__list-item
									.row
										.col-lg-6
											h5.title-with-star Tecnologici
										.col-lg-6
											ul.list-with-dash.with-indents
												li Efficientare i processi produttivi aziendali
												li Aumentare flessibilità, velocità, produttività, qualità e competitività
												li Monitorare in tempo reale i sistemi produttivi
												li Ridurre gli sprechi
												li Svolgere analisi sui big data
								.section-benefits__list-item
									.row
										.col-lg-6
											h5.title-with-star Fiscali
										.col-lg-6
											ul.list-with-dash.with-indents
												li Iper e Super ammortamento
												li Nuova Sabatini
												li Fondo di Garanzia
												li Patent Box
												li Credito Imposta Ricerca e Sviluppo e Formazione 4.0
					|
					|
					.row.remove-last-child-margin
						.col-md-6
							a(href="#" class="card-benefit mb-md-0")
								.card-benefit__img
									img(src="img/card-benefit/1.jpg" alt="Image" class="of-cover")
								|
								|
								h6.card-benefit__title Mister Plumber
						.col-md-6
							a(href="#" class="card-benefit mb-md-0")
								.card-benefit__img
									img(src="img/card-benefit/2.jpg" alt="Image" class="of-cover")
								|
								|
								h6.card-benefit__title Zeroundici
	// SECTION BENEFITS END
	|
	|
	section.section
		.container
			.text-sm-center
				h2 I nostri servizi
			|
			|
			.row.g-0.bordered-grid
				.col-sm-6.col-xl-4.d-flex
					a(href="servizi.html#internet-of-things" class="card-our-service mb-0")
						.card-our-service__icon-and-title
							.card-our-service__icon.round-icon.primary
								img(src="img/card-our-service/globe.svg" alt="Icon" class="card-our-service__icon-svg js-svg-injector")
							|
							|
							h3.card-our-service__title Internet of<br> Things
						.text-block
							p Crea una rete di dispositivi connessi per migliorare la comunicazione e la produttività.
				.col-sm-6.col-xl-4.d-flex
					a(href="servizi.html#big-data-analytics" class="card-our-service mb-0")
						.card-our-service__icon-and-title
							.card-our-service__icon.round-icon.primary
								img(src="img/card-our-service/database.svg" alt="Icon" class="card-our-service__icon-svg js-svg-injector")
							|
							|
							h3.card-our-service__title Big Data<br> Analytics
						.text-block
							p Utilizza software per la raccolta e la gestione efficiente dei dati, ricavandone grandi benefici.
				.col-sm-6.col-xl-4.d-flex
					a(href="servizi.html#cloud-computing" class="card-our-service mb-0")
						.card-our-service__icon-and-title
							.card-our-service__icon.round-icon.primary
								img(src="img/card-our-service/cloud.svg" alt="Icon" class="card-our-service__icon-svg js-svg-injector")
							|
							|
							h3.card-our-service__title Cloud<br> Computing
						.text-block
							p Sfrutta un’infrastruttura IT comune, flessibile e di progettazione aperta per condividere dati, informazioni e applicazioni attraverso internet oltre i confini aziendali.
				.col-sm-6.col-xl-4.d-flex
					a(href="servizi.html#additive-manufacturing" class="card-our-service mb-0")
						.card-our-service__icon-and-title
							.card-our-service__icon.round-icon.primary
								img(src="img/card-our-service/codesandbox.svg" alt="Icon" class="card-our-service__icon-svg js-svg-injector")
							|
							|
							h3.card-our-service__title Additive<br> Manufacturing
						.text-block
							p Crea prodotti personalizzati e complessi, non realizzabili con le tecniche tradizionali, utilizzando una minor quantità di materia prima e riducendo tempi di prototipazione e costi.
				.col-sm-6.col-xl-4.d-flex
					a(href="servizi.html#augmented-reality" class="card-our-service mb-0")
						.card-our-service__icon-and-title
							.card-our-service__icon.round-icon.primary
								img(src="img/card-our-service/box.svg" alt="Icon" class="card-our-service__icon-svg js-svg-injector")
							|
							|
							h3.card-our-service__title Augmented<br> Reality
						.text-block
							p Potenzia le interazioni con il mondo reale, integrandolo con informazioni di qualsiasi forma (testuale, grafica, audio, ecc).
				.col-sm-6.col-xl-4.d-flex
					a(href="servizi.html#cybersecurity-services" class="card-our-service mb-0")
						.card-our-service__icon-and-title
							.card-our-service__icon.round-icon.primary
								img(src="img/card-our-service/shield.svg" alt="Icon" class="card-our-service__icon-svg js-svg-injector")
							|
							|
							h3.card-our-service__title Cybersecurity<br> Services
						.text-block
							p Proteggi i tuoi dati, le tue comunicazioni e le tue infrastrutture dalle minacce informatiche o dai furti di informazioni.
	|
	|
	// SECTION CONTACT US
	include ../includes/_section-contact-us.pug
	// SECTION CONTACT US END